<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wangweiandlitian.myapplication.MainActivity">

    <android.support.v4.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/main_frame_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#eeeeee"
                android:layout_above="@+id/main_bottom_radio_group" />
            <RadioGroup
                android:id="@id/main_bottom_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>

                <RadioButton
                    android:id="@+id/main_rb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/ic_home_black_24dp"
                    android:text="主页"
                    android:gravity="center" />

                <RadioButton
                    android:id="@+id/team_rb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/ic_home_black_24dp"
                    android:text="小组"
                    android:gravity="center" />

                <RadioButton
                    android:id="@+id/find_rb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/ic_home_black_24dp"
                    android:text="发现"
                    android:gravity="center" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>
            </RadioGroup>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_one"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:background="@drawable/bg_personinfo_shuai">
                <ImageView
                    android:id="@+id/image_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_account_circle_black_24dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="20dp"/>
                <TextView
                    android:id="@+id/text_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/image_one"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/image_one"
                    android:text="登录"
                    android:textColor="#ffffff"
                    android:textSize="15sp"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">
                <ImageView
                    android:id="@+id/image_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_people_black_24dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"/>
                <TextView
                    android:id="@+id/text_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/image_two"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/image_two"
                    android:text="社区"
                    android:textSize="15sp"/>
                <ImageView
                    android:id="@+id/image_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image_two"
                    android:src="@drawable/ic_loyalty_black_24dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="20dp"/>
                <TextView
                    android:id="@+id/text_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/image_three"
                    android:layout_toRightOf="@id/image_three"
                    android:layout_marginLeft="30dp"
                    android:text="甩甩尾巴"
                    android:textSize="15sp"/>
                <ImageView
                    android:id="@+id/image_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image_three"
                    android:src="@drawable/ic_folder_shared_black_24dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="20dp"/>
                <TextView
                    android:id="@+id/text_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/image_four"
                    android:layout_toRightOf="@id/image_four"
                    android:layout_marginLeft="30dp"
                    android:text="我的关注"
                    android:textSize="15sp"/>
                <ImageView
                    android:id="@+id/image_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image_four"
                    android:src="@drawable/ic_book_black_24dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="20dp"/>
                <TextView
                    android:id="@+id/text_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/image_five"
                    android:layout_toRightOf="@id/image_five"
                    android:layout_marginLeft="30dp"
                    android:text="我的收藏"
                    android:textSize="15sp"/>
                <ImageView
                    android:id="@+id/image_six"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image_five"
                    android:src="@drawable/ic_rate_review_black_24dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="20dp"/>
                <TextView
                    android:id="@+id/text_six"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/image_six"
                    android:layout_toRightOf="@id/image_six"
                    android:layout_marginLeft="30dp"
                    android:text="我的帖子"
                    android:textSize="15sp"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#eeeeee"/>
            <RelativeLayout
                android:id="@+id/rl_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ffffff">
                <ImageView
                    android:id="@+id/image_seven"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_insert_drive_file_black_24dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"/>
                <TextView
                    android:id="@+id/text_seven"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/image_seven"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/image_seven"
                    android:text="草稿箱"
                    android:textSize="15sp"/>
                <ImageView
                    android:id="@+id/image_eight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image_seven"
                    android:src="@drawable/ic_cloud_download_black_24dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="20dp"/>
                <TextView
                    android:id="@+id/text_eight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/image_eight"
                    android:layout_toRightOf="@id/image_eight"
                    android:layout_marginLeft="30dp"
                    android:text="离线下载"
                    android:textSize="15sp"/>
                <ImageView
                    android:id="@+id/image_nine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image_eight"
                    android:src="@drawable/ic_darkness_black_24dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="20dp"/>
                <TextView
                    android:id="@+id/text_nine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/image_nine"
                    android:layout_toRightOf="@id/image_nine"
                    android:layout_marginLeft="30dp"
                    android:text="夜间模式"
                    android:textSize="15sp"/>
                <ImageView
                    android:id="@+id/image_ten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image_nine"
                    android:src="@drawable/ic_settings_black_24dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="20dp"/>
                <TextView
                    android:id="@+id/text_ten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/image_ten"
                    android:layout_toRightOf="@id/image_ten"
                    android:layout_marginLeft="30dp"
                    android:text="设置"
                    android:textSize="15sp"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_four"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:background="#ffffff">


            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>

</RelativeLayout>
